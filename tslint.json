{
  "extends"        : [
    "tslint:recommended"
  ],
  "defaultSeverity": "error",
  "jsRules"        : {},
  "rules"          : {
    "quotemark"               : [
      true,
      "double"
    ],
    "no-bitwise"              : false,
    "variable-name"           : false,
    "indent"                  : [
      true
    ],
    "interface-name"          : [
      false
    ],
    "arrow-parens"            : false,
    "object-literal-sort-keys": false
  },
  "rulesDirectory" : []
}
